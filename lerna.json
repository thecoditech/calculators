{
  "lerna": "2.9.1",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s"
    }
  },
  "version": "independent"
}
